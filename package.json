{
  "name": "openapi-gen-learning",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=24",
    "pnpm": ">=10.12"
  },
  "scripts": {
    "dev": "concurrently \"pnpm run mock\" \"pnpm --filter './packages/*' --parallel dev\" \"pnpm run open:delayed\"",
    "mock": "prism mock ./openapi.yaml -h 0.0.0.0 -p 4010",
    "generate": "pnpm --filter './packages/*' --parallel generate",
    "build": "pnpm --filter './packages/*' --parallel build",
    "typecheck": "pnpm --filter './packages/*' --parallel typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write",
    "lint:fix:unsafe": "biome check --write --unsafe",
    "verify": "pnpm run build && pnpm run typecheck && pnpm run lint",
    "open:delayed": "sleep 1 && pnpm run open",
    "open": "concurrently \"open http://localhost:5173\" \"open http://localhost:5174\" \"open http://localhost:5175\" \"open http://localhost:5176\" \"open http://localhost:5177\"",
    "dev:clean": "pnpm run kill:ports && pnpm run dev",
    "kill:ports": "lsof -ti:4010,5173,5174,5175,5176,5177 | xargs kill -9 2>/dev/null || true"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@stoplight/prism-cli": "^5.14.2",
    "@types/node": "^24.0.3",
    "concurrently": "^9.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
