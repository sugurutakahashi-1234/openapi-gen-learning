{
  "name": "openapi-gen-learning",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=24",
    "pnpm": ">=10.12"
  },
  "scripts": {
    "dev:heyapi-zod": "pnpm --filter @openapi-gen-learning/stack-heyapi-zod dev",
    "dev:heyapi-valibot": "pnpm --filter @openapi-gen-learning/stack-heyapi-valibot dev",
    "dev:oats": "pnpm --filter @openapi-gen-learning/stack-oats dev",
    "dev:orval": "pnpm --filter @openapi-gen-learning/stack-orval dev",
    "generate": "concurrently -n \"heyapi-zod,heyapi-valibot,oats,orval\" -c \"cyan,magenta,green,yellow\" \"pnpm run generate:heyapi-zod\" \"pnpm run generate:heyapi-valibot\" \"pnpm run generate:oats\" \"pnpm run generate:orval\"",
    "generate:heyapi-zod": "pnpm --filter @openapi-gen-learning/stack-heyapi-zod generate",
    "generate:heyapi-valibot": "pnpm --filter @openapi-gen-learning/stack-heyapi-valibot generate",
    "generate:oats": "pnpm --filter @openapi-gen-learning/stack-oats generate",
    "generate:orval": "pnpm --filter @openapi-gen-learning/stack-orval generate",
    "mock": "prism mock ./openapi.yaml -h 0.0.0.0 -p 4010",
    "dev": "pnpm run open:delayed & concurrently -n \"mock,heyapi-zod,heyapi-valibot,oats,orval\" -c \"yellow,cyan,magenta,green,red\" \"pnpm run mock\" \"pnpm run dev:heyapi-zod\" \"pnpm run dev:heyapi-valibot\" \"pnpm run dev:oats\" \"pnpm run dev:orval\"",
    "open:delayed": "sleep 1 && pnpm run open",
    "open": "concurrently \"open http://localhost:5173\" \"open http://localhost:5174\" \"open http://localhost:5175\" \"open http://localhost:5176\"",
    "dev:clean": "pnpm run kill:ports && pnpm run dev",
    "kill:ports": "lsof -ti:4010,5173,5174,5175,5176 | xargs kill -9 2>/dev/null || true",
    "build": "pnpm --filter './packages/*' build",
    "typecheck": "pnpm --filter './packages/*' typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write",
    "lint:fix:unsafe": "biome check --write --unsafe",
    "verify": "concurrently -n \"build,typecheck,lint\" -c \"blue,yellow,green\" \"pnpm run build\" \"pnpm run typecheck\" \"pnpm run lint\""
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@stoplight/prism-cli": "^5.14.2",
    "@types/node": "^24.0.3",
    "concurrently": "^9.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
